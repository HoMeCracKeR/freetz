config FREETZ_REPLACE_KERNEL_AVAILABLE
	bool
	depends on \
		! (FREETZ_TYPE_FON && FREETZ_TYPE_LANG_EN) && \
		! ( FREETZ_TYPE_FIRMWARE_LABOR && \
			!(FREETZ_TYPE_7490) \
		) && \
		! FREETZ_TYPE_3272 && \
		! FREETZ_TYPE_6810 && \
		! FREETZ_TYPE_6840 && \
		! FREETZ_TYPE_6842 && \
		! (FREETZ_TYPE_7330_SL && FREETZ_TYPE_FIRMWARE_06_XX) && \
		! (FREETZ_TYPE_7340 && FREETZ_TYPE_FIRMWARE_06_XX) && \
		! FREETZ_TYPE_7362 && \
		! (FREETZ_TYPE_7390 && FREETZ_TYPE_FIRMWARE_06_XX && !FREETZ_TYPE_LANG_DE) && \
		! FREETZ_TYPE_7272 && \
		\
		! (FREETZ_KERNEL_LAYOUT_VR9 && !FREETZ_TYPE_7490 && FREETZ_AVM_VERSION_7490_06_01 && FREETZ_TYPE_FIRMWARE_06_XX)
	default y
	help
		Select this if source code exactly matching the firmware version used is available for your box.

config FREETZ_REPLACE_MODULE_AVAILABLE
	bool
	depends on \
		FREETZ_REPLACE_KERNEL_AVAILABLE
#		FREETZ_REPLACE_KERNEL_AVAILABLE || \
#		( FREETZ_TYPE_FIRMWARE_LABOR && \
#			!FREETZ_TYPE_3272 && \
#			!FREETZ_TYPE_7330 \
#		)
	default y
	help
		Select this if only source code from a previous firmware version is available for your box.
		Note: Loading of the modules built by Freetz may work or may not!

config FREETZ_AVM_HAS_LABOR
	bool "Has AVM Labor Firmware"		if FREETZ_TYPE_CUSTOM
	default y		if \
		FREETZ_TYPE_LANG_DE && ( \
			FREETZ_TYPE_7240 || \
			FREETZ_TYPE_7270_16 || \
			FREETZ_TYPE_7360_V2 || \
			FREETZ_TYPE_7390 || \
			FREETZ_TYPE_7490 \
		)
	default n
	help
		Select this if a labor firmware is available for your box.

