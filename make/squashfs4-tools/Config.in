config FREETZ_PACKAGE_SQUASHFS4_TOOLS
	bool "squashfs-tools 4.3 - with AVM-BE support"
	depends on FREETZ_TYPE_7490
	select FREETZ_LIB_libm        if !FREETZ_PACKAGE_SQUASHFS4_TOOLS_ALL_STAT
	select FREETZ_LIB_libpthread  if !FREETZ_PACKAGE_SQUASHFS4_TOOLS_ALL_STAT
	select FREETZ_LIB_liblzma     if  FREETZ_PACKAGE_SQUASHFS4_TOOLS_ALL_DYN
	default n
	help
		As of now this package provides only unsquashfs utility modified
		to be able to expand BE images for AVM's 3.10.73 kernel based systems

choice
	depends on FREETZ_PACKAGE_SQUASHFS4_TOOLS
	prompt "Link"
	default FREETZ_PACKAGE_SQUASHFS4_TOOLS_ALL_DYN

	config FREETZ_PACKAGE_SQUASHFS4_TOOLS_ALL_DYN
		bool "all libraries dynamically"

	config FREETZ_PACKAGE_SQUASHFS4_TOOLS_COMP_DYN
		bool "compression libraries statically"

	config FREETZ_PACKAGE_SQUASHFS4_TOOLS_ALL_STAT
		bool "all libraries statically"
endchoice
